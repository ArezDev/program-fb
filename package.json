{
  "name": "auto-krit",
  "version": "1.0.2",
  "description": "Semoga facebook merestui..",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "asar": true,
    "asarUnpack": [
      "cookies/**"
    ],
    "appId": "com.arezdev.autokrit",
    "productName": "Auto Create By ArezDev",
    "directories": {
      "output": "autofb"
    },
    "win": {
      "target": "nsis",
      "icon": "logo.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "logo.ico",
      "uninstallerIcon": "logo.ico",
      "installerHeaderIcon": "logo.ico",
      "uninstallDisplayName": "Uninstall Auto Create By ArezDev"
    },
    "extraResources": [
      {
        "from": "cookies",
        "to": "cookies"
      }
    ],
    "files": [
      "**/*",
      "!cookies/**"
    ]
  },
  "keywords": [],
  "author": "https://t.me/ArezDev",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@appium/types": "^0.26.0",
    "axios": "^0.27.2",
    "axios-cookiejar-support": "1.0.1",
    "core-util-is": "^1.0.3",
    "electron-store": "^8.1.0",
    "get-port": "^7.1.0",
    "imap": "^0.8.19",
    "imap-simple": "^5.1.0",
    "lodash": "^4.17.21",
    "mailparser": "^3.7.4",
    "node-imap": "^0.9.6",
    "portfinder": "^1.0.37",
    "readable-stream": "^4.7.0",
    "socks-proxy-agent": "^8.0.5",
    "tough-cookie": "^5.1.2",
    "util": "^0.12.5",
    "wait-on": "^8.0.3",
    "webdriverio": "^9.15.0"
  },
  "devDependencies": {
    "appium": "^2.19.0",
    "appium-uiautomator2-driver": "^4.2.3",
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12"
  }
}
